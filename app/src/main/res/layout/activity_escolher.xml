<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green_tela_escolher"
    tools:context=".Escolher">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgEndSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/text_header_tela_escolher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="512dp"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/btnEmpresas"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/style_btn_pressionado"
            android:onClick="onClickBtnEmpresa"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_buscar_empresa" />

        <ImageButton
            android:id="@+id/btnProdServico"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/style_btn_pressionado"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_produtos_e_servicos" />

        <ImageButton
            android:id="@+id/btnCmAnunciar"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/style_btn_pressionado"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_anunciar" />

        <ImageButton
            android:id="@+id/btnSobre"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/style_btn_pressionado"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_sobre" />

        <ImageButton
            android:id="@+id/btnSac"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/style_btn_pressionado"
            android:onClick="onClickBtnSAC"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_sac" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>